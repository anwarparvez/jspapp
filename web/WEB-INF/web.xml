<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">


    <!-- Sitemesh Filter -->

    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>net.therap.filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>net.therap.filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>votingFilter</filter-name>
        <filter-class>net.therap.filter.VotingFilter</filter-class>
    </filter>


    <!-- Put the URL pattern what you want to protect-->


    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <servlet-name>user</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <servlet-name>FoodVotingController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <servlet-name>FoodVotingController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>votingFilter</filter-name>
        <servlet-name>FoodVotingController</servlet-name>
    </filter-mapping>




    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>net.therap.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>net.therap.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FoodVotingController</servlet-name>
        <servlet-class>net.therap.controller.FoodVotingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FoodVotingController</servlet-name>
        <url-pattern>/vote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FoodVotingController</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>



    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>



    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/c.tld</taglib-location>
        </taglib>

        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
            <taglib-location>/WEB-INF/fmt.tld</taglib-location>
        </taglib>
    </jsp-config>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

</web-app>
